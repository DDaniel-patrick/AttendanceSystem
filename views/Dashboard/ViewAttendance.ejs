<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View attendee</title>
</head>
<body>
    <h1><%= Details.name %> Attendance</h1>
    <h3>created:<%= Details.createdAt %> || closed:<%= Details.closed %> ||</h3>
    <a href="<%= website %>/attendance/single/<%= Details._id %>" target="_blank"><%= website %>/attendance/single/<%= Details._id %></a>
    <a href='/attendance/close/<%= Details._id %>?switch=<%= Details.closed?"yes":"no" %>'>switch</a>
    <center><h3>All Attendee</h3></center>

    <% AllAttendee?.reverse()?.forEach(i => { %>
        <h3><%= i.name %></h3>
        <h4>Joined: <%= i.createdAt %></h4>
        <a href="/attendance/remove/<%= Details._id %>?user=<%= i._id %>">Unckeck User</a>
    <% }) %>

    <center><h3>All Absent Attendee</h3></center>

    <% AllAbsenseAttendee?.reverse()?.forEach(i => { %>
        <h3><%= i.name %></h3>
        <h4>Reason: <%= i.Reason %></h4>
        <h4>Joined: <%= i.createdAt %></h4>
    <% }) %>

</body>
</html>